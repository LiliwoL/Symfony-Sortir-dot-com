<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- mobile metas -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="viewport" content="initial-scale=1, maximum-scale=1">
        <!-- site metas -->
        <meta name="keywords" content="">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}SORTIRDOTCOM | {% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- style css -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Crimson+Pro">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        {% block stylesheet %}{% endblock stylesheet %}
        <!-- Responsive-->
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
        <!-- Javascript-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <header class="header_section">
        <div class="container-fluid header_main">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="logo">
                        <img src="{{ asset('assets/images/logo-eni.png') }}" alt="logo">
                        <img src="{{ asset('assets/images/logo-sortirdotcom.png') }}" alt="logo">
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>

                    </button>
                    <div class="collapse navbar-collapse show" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto nav-mr-left">
                            {% if app.user %}
                                <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ville_index') }}">&nbsp;&nbsp; Villes &nbsp;&nbsp;</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_site_index') }}">&nbsp;&nbsp; Sites &nbsp;&nbsp;</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">&nbsp;&nbsp;Accueil&nbsp;&nbsp;</a>
                                </li>
                                <li class="nav-item dropdown dropstart">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" >
                                    <img class="profil" src="{{ asset('assets/images/avatar-anonyme.png') }}" alt="profil"></a>
                                <ul class="dropdown-menu">
                                    <li>
                                    <table class="table">
                                        <tr>
                                            <td><strong>Pseudo</strong></td>
                                            <td>{{ app.user.userIdentifier }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Prénom</strong></td>
                                            <td>{{ app.user.prenom }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Nom</strong></td>
                                            <td>{{ app.user.nom }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Tél</strong></td>
                                            <td>{{ app.user.telephone }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>E-mail</strong></td>
                                            <td>{{ app.user.courriel }}</td>
                                        </tr>
                                    </table>
                                    </li>
                                    <li class="dropdown-item"> <a href="{{ path('profile_edit') }}">Modifier</a></li>
                                    <li class="dropdown-item"> <a href="{{ path('app_logout') }}" style type="color=">Me déconnecter</a></li>


                                </ul>
                            </li>
                     {% endif%}
                            {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                      {% if is_granted("ROLE_ADMIN") %}
                            <li class="nav-item">
                            <a class="nav-link" href="#">S'inscrire</a>
                            </li>
                            {% endif %}
                            {% endif %}

                        </ul>
                    </div>
                </nav>
            </div>
    </header>
        <!-- about section start -->
        <main class="about_section layout_padding">
            <div class="container">
                <div class="row">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </main>
        <!-- about section end -->
    </body>
        <!-- footer section start -->
        <footer class="footer_section layout_padding">
            <!-- copyright section start -->
            <div class="copyright_section">
                <div class="container">
                    <p class="copyright_text">
                        Site&nbsp;de&nbsp;réseau&nbsp;social produit&nbsp;par le&nbsp;groupe <strong>Alexandre&nbsp;Luc&nbsp;Manel</strong><br><br>
                        Projet&nbsp;de&nbsp;groupe durant&nbsp;la&nbsp;formation à&nbsp;l'<strong>&nbsp;ENI&nbsp;2022-23</strong>
                    </p>
                </div>
            </div>
            <!-- footer section end -->
        </footer>

</html>
