    <style>
        /*************************************************************
          SECTIONS
        **************************************************************/
        section {
            position: relative;
            min-height: 100vh;
            width: 100%;
            transform-style: inherit;
        }

        .section1,
        .section3 {
            background: #fafafa;
            box-shadow: 0 0 20px #333;
            z-index: 1;
        }

        .section0::before,
        .section2::before,
        .section4::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            display: block;
            background-size: cover;
            transform: translateZ(-.5px) scale(1.6);
            z-index: -1;
        }

        .section0::before {
            background: url({{ asset('/assets/images/accueilBG0.jpg') }}) top center;
        }

        .section2::before {
            background: url({{ asset('/assets/images/accueilBG2.jpg') }}) top center;
        }

        .section4::before {
            background: url({{ asset('/assets/images/accueilBG4.jpg') }}) top center;
        }

        /*************************************************************
          HEADINGS
        **************************************************************/
        h1 {
            font-size: 4rem;
            text-align: center;
            position: absolute;
            padding: 1rem;
            background: #fafafa;
            box-shadow: 0 0 20px #333;
            top: 50%;
            left: 50%;
            transform: translateZ(-1px) scale(2) translate(-25%, -25%);
        }

        .section1 h1,
        .section3 h1{
            z-index: 3;
            transform: translate(-50%, -50%);
            box-shadow: none;
        }

        .section0 h1,
        .section2 h1,
        .section4 h1{
            transform: translateZ(-.3px) scale(1.3) translate(-39%, -39%);
            z-index: 3;
        }

        /*************************************************************
          BASIC STYLES
        **************************************************************/
        *,
        *::before,
        *::after,
        :root {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            overflow: hidden;
            height: 100%;
        }

        body {
            overflow-x: hidden;
            overflow-y: scroll;
            height: 100%;
            perspective: 1px;
            transform-style: preserve-3d;
            font-size: 62.5%;
            font-family: 'Overlock', Arial, Helvetica, sans-serif;
        }
    </style>
