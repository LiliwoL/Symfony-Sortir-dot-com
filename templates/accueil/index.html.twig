    <style>
        /*************************************************************
          SECTIONS
        **************************************************************/
        section:nth-child(odd) {
            position: relative;
            min-height: 100vh;
            width: 100%;
            transform-style: inherit;
        }

        section:nth-child(even) {
            position: relative;
            min-height: 100vh;
            width: 100%;
            transform-style: inherit;
        }

        .section1,
        .section3,
        .section5,
        .section7 {
            background: #fafafa;
            box-shadow: 0 0 20px #333;
            z-index: 1;
        }

        .section0::before,
        .section2::before,
        .section4::before,
        .section6::before,
        .section8::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            display: block;
            background-size: cover;
            min-width: 1000px;
            transform: translateZ(-.5px) scale(1.6);
            z-index: -1;
        }

        .section0::before {
            background: #011f39 top center;
        }

        .section2::before {
            background: url({{ asset('/assets/images/accueilBG2.jpg') }}) top center;
        }

        .section4::before {
            background: url({{ asset('/assets/images/accueilBG4.jpg') }}) top center;
