        .section8::before {
            background: url({{ asset('/assets/images/accueilBG8.jpg') }}) top center;
        }

        /*************************************************************
          CONTENT
        **************************************************************/
        .content {
            text-align: center;
            position: absolute;
            padding: 1rem;
            box-shadow: 0 0 20px #333;
            top: 50%;
            left: 50%;
            transform: translateZ(-1px) scale(2) translate(-25%, -25%);
        }

        .section1 .content h2,
        .section3 .content h2,
        .section5 .content h2,
        .section7 .content h2 {
            font-size: 8rem;
            color: #011f39;
        }

        .section0 .content h2,
        .section2 .content h2,
        .section4 .content h2,
        .section6 .content h2,
        .section8 .content h2 {
            font-size: 8rem;
            color: white;
        }

        .content div {
            font-size: 2em;
        }

        body:nth-child(even) .content {
            z-index: 3;
            transform: translate(-50%, -50%);
            box-shadow: none;
        }

        body:nth-child(odd) .content {
            transform: translateZ(-.3px) scale(1.3) translate(-39%, -39%);
            z-index: 3;
        }

        /*************************************************************
          BASIC STYLES
        **************************************************************/
        *,
        *::before,
        *::after,
